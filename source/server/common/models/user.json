{
  "name": "user",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "userType": {
      "type": "string",
      "default": "borrower",
      "description": "borrower | lender"
    },
    "address": {
      "type": "string",
      "index": true
    },
    "privateKey": {
      "type": "string"
    },
    "entropy": {
      "type": "string"
    },
    "lastUpdated": false,
    "realm": false,
    "credentials": false,
    "challenges": false,
    "status": false,
    "emailVerified": false,
    "verificationToken": false
  },
  "validations": [],
  "relations": {
    "credit": {
      "type": "hasMany",
      "model": "credit",
      "foreignKey": "borrowerId"
    },
    "bidHistory": {
      "type": "hasMany",
      "model": "bidHistory",
      "foreignKey": "lenderId"
    }
  },
  "acls": [
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY",
      "property": "count"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "count"
    }
  ],
  "methods": {}
}
