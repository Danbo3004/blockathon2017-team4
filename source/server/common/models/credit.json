{
  "name": "credit",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "borrowerId": {
      "type": "number",
      "required": true
    },
    "borrowerName": {
      "type": "number",
      "required": true
    },
    "amount": {
      "type": "number"
    },
    "rate": {
      "type": "number"
    },
    "period": {
      "type": "number",
      "description": "period in second"
    },
    "expired": {
      "type": "boolean",
      "default": "false"
    },
    "lenderId": {
      "type": "number"
    },
    "lenderName": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "default": "created",
      "description": "readyToBid | lending | pay | done"
    },
    "created": {
      "type": "number"
    },
    "modified": {
      "type": "number"
    }
  },
  "validations": [],
  "relations": {
    "bidHistory": {
      "type": "hasMany",
      "model": "bidHistory",
      "foreignKey": "creditId"
    },
    "payLoan": {
      "type": "hasMany",
      "model": "payLoan",
      "foreignKey": "creditId"
    }
  },
  "acls": [
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
