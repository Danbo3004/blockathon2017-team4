{
  "name": "credit",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "borrowerId": {
      "type": "number",
      "required": true
    },
    "borrowerName": {
      "type": "number",
      "required": true
    },
    "amount": {
      "type": "number"
    },
    "cicRank": {
      "type": "number",
      "default": 5
    },
    "lllRank": {
      "type": "number",
      "default": 5
    },
    "creditLimit": {
      "type": "number",
      "default": 0
    },
    "rate": {
      "type": "number"
    },
    "dueDay": {
      "type": "number",
      "description": "dueDay of lend"
    },
    "expiredTime": {
      "type": "number"
    },
    "lenderId": {
      "type": "number"
    },
    "lenderName": {
      "type": "string"
    },
    "startLend": {
      "type": "number"
    },
    "endLend": {
      "type": "number"
    },
    "status": {
      "type": "string",
      "default": "created",
      "description": "readyToBid | lending | pay | done"
    },
    "created": {
      "type": "number"
    },
    "modified": {
      "type": "number"
    }
  },
  "validations": [],
  "relations": {
    "bidHistory": {
      "type": "hasMany",
      "model": "bidHistory",
      "foreignKey": "creditId"
    },
    "payLoan": {
      "type": "hasMany",
      "model": "payLoan",
      "foreignKey": "creditId"
    }
  },
  "acls": [
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "property":"bid",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "property":"bid",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "property":"payDebt",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "property":"payDebt",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "property":"newLoan",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "property":"newLoan",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "property":"newBid",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "property":"newBid",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
